{
  "rootDir": "../",
  "globalSetup": "<rootDir>/test/e2e/jest-e2e.setup.ts",
  "globalTeardown": "<rootDir>/test/e2e/jest-e2e.teardown.ts",
  "testEnvironment": "node",
  "testMatch": ["<rootDir>/test/e2e/**/*.e2e-spec.ts"],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/src/$1",
    "^generated/prisma$": "<rootDir>/generated/prisma",
    "^generated/prisma/(.*)$": "<rootDir>/generated/prisma/$1"
  }
}
