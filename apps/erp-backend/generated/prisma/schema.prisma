generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Role {
  id          String   @id @default(cuid()) // e.g. 'role-admin' or custom
  name        String
  type        RoleType @default(CUSTOM) // 'STATIC' or 'CUSTOM'
  permissions String[] // e.g. ['students:read', 'fees:write']
  // TODO: institutionId and institution removed for now
  users       User[] // back-reference
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum RoleType {
  STATIC
  CUSTOM
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  role      Role     @relation(fields: [roleId], references: [id])
  roleId    String
  // other fields
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
